<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        app:title="Ôn thi giấy phép lái xe"
        app:titleTextColor="@color/icons">

    </android.support.v7.widget.Toolbar>

    <TableLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:stretchColumns="*">

        <TableRow
            android:layout_weight="1"
            android:padding="0dp">

            <Button
                android:textColor="@color/accent"
                android:padding="20dp"
                android:gravity="center"
                android:drawableTop="@drawable/icon_random"
                android:id="@+id/dengaunhien"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/marginButton"
                android:background="@color/icons"

                android:text="Đề ngẫu nhiên"
                android:textAllCaps="false" />

            <Button
                android:textColor="@color/accent"
                android:padding="20dp"
                android:gravity="center"
                android:drawableTop="@drawable/icon_test"
                android:id="@+id/thitheobo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/marginButton"
                android:background="@color/icons"
                android:text="Thi theo bộ đề"
                android:textAllCaps="false" />
        </TableRow>


        <TableRow
            android:layout_weight="1"
            android:padding="0dp">

            <Button
                android:textColor="@color/accent"
                android:padding="20dp"
                android:gravity="center"
                android:drawableTop="@drawable/icon_wrong"
                android:id="@+id/causai"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/marginButton"
                android:background="@color/icons"
                android:text="Xem câu bị sai"
                android:textAllCaps="false" />

            <Button
                android:textColor="@color/accent"
                android:padding="20dp"
                android:gravity="center"
                android:drawableTop="@drawable/icon_book"
                android:id="@+id/ontap"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/marginButton"
               android:background="@color/icons"
                android:text="Ôn tập câu hỏi"
                android:textAllCaps="false" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:textColor="@color/accent"
                android:padding="20dp"
                android:gravity="center"
                android:drawableTop="@drawable/icon_traffic"
                android:id="@+id/bienbao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/marginButton"
                android:background="@color/icons"
                android:text="Các biển báo"
                android:textAllCaps="false" />

            <Button
                android:textColor="@color/accent"
                android:padding="20dp"
                android:gravity="center"
                android:drawableTop="@drawable/icon_tip"
                android:id="@+id/meoghinho"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/marginButton"
                android:background="@color/icons"
                android:text="Mẹo ghi nhớ"
                android:textAllCaps="false" />
        </TableRow>

        <TableRow
            android:id="@+id/rowlast"
            android:layout_weight="1">

            <Button
                android:textColor="@color/accent"
                android:padding="20dp"
                android:gravity="center"
                android:drawableTop="@drawable/icon_car"
                android:id="@+id/baithisahinh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/marginButton"
                android:background="@color/icons"
                android:text="Bài thi sa hình"
                android:textAllCaps="false" />
        </TableRow>

    </TableLayout>

</LinearLayout>